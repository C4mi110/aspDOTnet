@model IEnumerable<ProductModel>

@{
    ViewBag.Title = "Wszystkei produkty";
    Layout = "_AdminLayout";
}

<table>
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Cena</th>
        <th>Akcja</th>
    </tr>
    @foreach (var item in Model)
    { 
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" asp-route-productId="@item.Id">Edytuj</a>
                    <input type="hidden" name="productId" value="@item.Id" />
                    <button type="submit">Usuń</button>
                </form>
            </td>
        </tr>    
    }
</table>

<a asp-action="Create">Dodaj produkt</a>
